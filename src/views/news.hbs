<div class="">

<div class="container" style="margin:50px auto">
    {{#if error }}
    <h5>{{message}}</h5>
    {{/if}}
    <div class="row">
        <div class="col">
            <p class="text-right">Hola {{user}} 
                <a href="/admin/logout" class="btn btn-sm btn-danger">
                Cerrar Sesion <i class="fa fa-sing-out"></i></a></p>
        </div>
    </div>
    <div class="row">
        <div class="col-7">
            <h4>Listado de novedades</h4>
        </div>
        <div class="col-2 text-right">
            <a href="/admin/novedades/agregar" class="btn btn-succes"><i class="fa fa-plus"></i>Nuevo</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th scope="col">Imagen</th>
                        <th scope="col" class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each news}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{title}}</td>
                        <td>{{{image}}}</td>
                        <td class="text-center">
                            <a href="/admin/novedades/modificar/{{id}}" class="btn btn-sm btn-secondary">
                            <i class="fa fa-pencil"></i></a>
                            <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-sm btn-secondary">
                            <i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>

</div>

</div>
<script type="text/javascript">
</script>

