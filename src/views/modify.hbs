<div class="container" style="margin: 50px auto">
    {{#if error }}
    <h5>{{message}}</h5>
    {{/if}}
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar novedad</h4>
            <form action="/admin/novedades/modificar" method="post">
            <input type="hidden" name="id" value="{{newToModify.id}}">
                <div class="form-group mt-3">
                    <label>Titulo</label>
                    <input type="text" class="form-control"
                    value="{{newToModify.title}}" 
                    placeholder="Titulo" name="title">
                </div>
                <div class="form-group mt-3">
                    <label>Subtitulo</label>
                    <input value="{{newToModify.subtitle}}" type="text" class="form-control" placeholder="Subtitulo" name="subtitle">
                </div>
                <div class="form-group mt-3">
                    <label>Cuerpo</label>
                    <textarea value="{{newToModify.body}}" type="text" class="form-control" placeholder="Cuerpo" name="body">
                    </textarea>
                </div>
                <button type="submit" class="btn btn-primary mt-5">
                    Guardar
                </button>
            </form>
        </div>
    </div>
</div>