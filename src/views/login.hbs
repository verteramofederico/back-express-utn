<form class="p-5" action="/admin/login" method="post">
    <!-- Email input -->
    <div class="form-outline mb-4 px-5">
        <input type="text" id="form2Example1" name="user" class="form-control" />
        <label class="form-label" for="form2Example1">User</label>
    </div>

    <!-- Password input -->
    <div class="form-outline mb-4 px-5">
        <input type="password" id="form2Example2" name="password" class="form-control" />
        <label class="form-label" for="form2Example2">Password</label>
    </div>

    {{#if error}}
    <p class="text-danger px-5">  {{message}} </p>
    {{/if }}


    <!-- Submit button -->
    <div class="px-5">
    <button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>
    </div>
    
    </div>
</form>



